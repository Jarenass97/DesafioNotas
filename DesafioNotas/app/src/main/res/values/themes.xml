<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioNotas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <item name="colorPrimaryDark">@color/PrimaryVariant</item>
    </style>
    <style name="txtAsuntos" parent="Theme.DesafioNotas">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="txtHoras" parent="Theme.DesafioNotas">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="InputText" parent="Theme.DesafioNotas">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="textModFechaHoraDetalle" parent="txtHoras">
        <item name="android:textColor">#757474</item>
    </style>

    <style name="imgButton" parent="Theme.DesafioNotas">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="txtTareaNoRealizada" parent="Theme.DesafioNotas">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="txtTareaRealizada" parent="Theme.DesafioNotas">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="inicialContacto" parent="Theme.DesafioNotas">
        <item name="android:background">@color/gris_claro</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="textoNota" parent="Theme.DesafioNotas">
        <item name="android:background">@drawable/plantilla</item>
        <item name="android:backgroundTint">#8A8686</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="textoNota.color" parent="textoNota">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>