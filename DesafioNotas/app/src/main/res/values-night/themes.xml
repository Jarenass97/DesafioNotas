<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioNotas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="txtTareaNoRealizada" parent="Theme.DesafioNotas">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="inicialContacto" parent="Theme.DesafioNotas">
        <item name="android:background">@color/gris_oscuro</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="textoNota.color" parent="textoNota">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>